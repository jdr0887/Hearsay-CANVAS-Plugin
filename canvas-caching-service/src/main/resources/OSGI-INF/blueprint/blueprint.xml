<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0" default-activation="lazy">

  <cm:property-placeholder persistent-id="org.renci.hearsay.canvas" update-strategy="reload">
    <cm:default-properties>
      <cm:property name="delayBetweenCachingRuns" value="1440" />
      <cm:property name="cachingIsOn" value="true" />
      <cm:property name="refSeqVersion" value="61" />
      <cm:property name="genomeRefId" value="2" />
    </cm:default-properties>
  </cm:property-placeholder>

  <reference id="hearsayTranscriptDAO" interface="org.renci.hearsay.dao.TranscriptDAO" />
  <reference id="hearsayTranscriptIntervalDAO" interface="org.renci.hearsay.dao.TranscriptIntervalDAO" />
  <reference id="transcriptDAO" interface="org.renci.hearsay.canvas.refseq.dao.TranscriptDAO" />
  <reference id="transcriptMapsDAO" interface="org.renci.hearsay.canvas.refseq.dao.TranscriptMapsDAO" />
  <reference id="transcriptMapsExonsDAO" interface="org.renci.hearsay.canvas.refseq.dao.TranscriptMapsExonsDAO" />
  <reference id="refSeqGeneDAO" interface="org.renci.hearsay.canvas.refseq.dao.RefSeqGeneDAO" />
  <reference id="refSeqCodingSequenceDAO" interface="org.renci.hearsay.canvas.refseq.dao.RefSeqCodingSequenceDAO" />
  <reference id="HGNCGeneDAO" interface="org.renci.hearsay.canvas.hgnc.dao.HGNCGeneDAO" />

  <bean id="cachingPropertyBean" class="org.renci.hearsay.canvas.CANVASCachingPropertyBean">
    <property name="delayBetweenCachingRuns" value="${delayBetweenCachingRuns}" />
    <property name="cachingIsOn" value="${cachingIsOn}" />
    <property name="refSeqVersion" value="${refSeqVersion}" />
    <property name="genomeRefId" value="${genomeRefId}" />
  </bean>

  <bean id="cachingDAOBean" class="org.renci.hearsay.canvas.CANVASCachingDAOBean">
    <property name="hearsayTranscriptDAO" ref="hearsayTranscriptDAO" />
    <property name="hearsayTranscriptIntervalDAO" ref="hearsayTranscriptIntervalDAO" />
    <property name="transcriptDAO" ref="transcriptDAO" />
    <property name="transcriptMapsDAO" ref="transcriptMapsDAO" />
    <property name="transcriptMapsExonsDAO" ref="transcriptMapsExonsDAO" />
    <property name="refSeqGeneDAO" ref="refSeqGeneDAO" />
    <property name="refSeqCodingSequenceDAO" ref="refSeqCodingSequenceDAO" />
    <property name="HGNCGeneDAO" ref="HGNCGeneDAO" />
  </bean>

  <bean id="cachingTask" class="org.renci.hearsay.canvas.CANVASCachingTask">
    <property name="cachingPropertyBean" ref="cachingPropertyBean" />
    <property name="cachingDAOBean" ref="cachingDAOBean" />
  </bean>

  <bean id="CANVASCachingService" class="org.renci.hearsay.canvas.CANVASCachingService" init-method="start" destroy-method="stop"
    activation="eager">
    <property name="cachingPropertyBean" ref="cachingPropertyBean" />
    <property name="task" ref="cachingTask" />
    <cm:managed-properties persistent-id="org.renci.hearsay.canvas" update-strategy="container-managed" />
  </bean>

</blueprint>
