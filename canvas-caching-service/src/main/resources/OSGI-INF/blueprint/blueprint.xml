<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0" default-activation="lazy">

  <cm:property-placeholder persistent-id="org.renci.hearsay.canvas" update-strategy="reload">
    <cm:default-properties>
      <cm:property name="delayBetweenRuns" value="2880" />
      <cm:property name="refSeqVersion" value="61" />
      <cm:property name="genomeRefId" value="2" />
    </cm:default-properties>
  </cm:property-placeholder>

  <reference id="hearsayGeneDAO" interface="org.renci.hearsay.dao.GeneDAO" />
  <reference id="hearsayGenomicSequenceVariantDAO" interface="org.renci.hearsay.dao.GenomicSequenceVariantDAO" />
  <reference id="hearsayMappedTranscriptDAO" interface="org.renci.hearsay.dao.MappedTranscriptDAO" />
  <reference id="hearsayReferenceGenomeDAO" interface="org.renci.hearsay.dao.ReferenceGenomeDAO" />
  <reference id="hearsayReferenceSequenceDAO" interface="org.renci.hearsay.dao.ReferenceSequenceDAO" />
  <reference id="hearsayTranscriptDAO" interface="org.renci.hearsay.dao.TranscriptDAO" />
  <reference id="hearsayTranscriptVariantDAO" interface="org.renci.hearsay.dao.TranscriptVariantDAO" />
  <reference id="hearsayTranslationDAO" interface="org.renci.hearsay.dao.TranslationDAO" />
  <reference id="hearsayTranslationVariantDAO" interface="org.renci.hearsay.dao.TranslationVariantDAO" />
  <reference id="hearsayVariantDAO" interface="org.renci.hearsay.dao.VariantDAO" />
  <reference id="hearsayVariantEffectDAO" interface="org.renci.hearsay.dao.VariantEffectDAO" />

  <bean id="hearsayDAOBean" class="org.renci.hearsay.dao.HearsayDAOBean">
    <property name="geneDAO" ref="hearsayGeneDAO" />
    <property name="genomicSequenceVariantDAO" ref="hearsayGenomicSequenceVariantDAO" />
    <property name="mappedTranscriptDAO" ref="hearsayMappedTranscriptDAO" />
    <property name="referenceGenomeDAO" ref="hearsayReferenceGenomeDAO" />
    <property name="referenceSequenceDAO" ref="hearsayReferenceSequenceDAO" />
    <property name="transcriptDAO" ref="hearsayTranscriptDAO" />
    <property name="transcriptVariantDAO" ref="hearsayTranscriptVariantDAO" />
    <property name="translationDAO" ref="hearsayTranslationDAO" />
    <property name="translationVariantDAO" ref="hearsayTranslationVariantDAO" />
    <property name="variantDAO" ref="hearsayVariantDAO" />
    <property name="variantEffectDAO" ref="hearsayVariantEffectDAO" />
  </bean>

  <reference id="annotationGeneDAO" interface="org.renci.hearsay.canvas.annotation.dao.AnnotationGeneDAO" />
  <reference id="annotationGeneExternalIdsDAO" interface="org.renci.hearsay.canvas.annotation.dao.AnnotationGeneExternalIdsDAO" />
  <reference id="transcriptDAO" interface="org.renci.hearsay.canvas.refseq.dao.TranscriptDAO" />
  <reference id="transcriptMapsDAO" interface="org.renci.hearsay.canvas.refseq.dao.TranscriptMapsDAO" />
  <reference id="transcriptMapsExonsDAO" interface="org.renci.hearsay.canvas.refseq.dao.TranscriptMapsExonsDAO" />
  <reference id="refSeqGeneDAO" interface="org.renci.hearsay.canvas.refseq.dao.RefSeqGeneDAO" />
  <reference id="refSeqCodingSequenceDAO" interface="org.renci.hearsay.canvas.refseq.dao.RefSeqCodingSequenceDAO" />
  <reference id="HGNCGeneDAO" interface="org.renci.hearsay.canvas.hgnc.dao.HGNCGeneDAO" />

  <bean id="canvasDAOBean" class="org.renci.hearsay.canvas.dao.CANVASDAOBean">
    <property name="annotationGeneDAO" ref="annotationGeneDAO" />
    <property name="annotationGeneExternalIdsDAO" ref="annotationGeneExternalIdsDAO" />
    <property name="transcriptDAO" ref="transcriptDAO" />
    <property name="transcriptMapsDAO" ref="transcriptMapsDAO" />
    <property name="transcriptMapsExonsDAO" ref="transcriptMapsExonsDAO" />
    <property name="refSeqGeneDAO" ref="refSeqGeneDAO" />
    <property name="refSeqCodingSequenceDAO" ref="refSeqCodingSequenceDAO" />
    <property name="HGNCGeneDAO" ref="HGNCGeneDAO" />
  </bean>

  <bean id="cachingCallable" class="org.renci.hearsay.canvas.CANVASCachingCallable">
    <property name="refSeqVersion" value="${refSeqVersion}" />
    <property name="genomeRefId" value="${genomeRefId}" />
    <property name="canvasDAOBean" ref="canvasDAOBean" />
    <property name="hearsayDAOBean" ref="hearsayDAOBean" />
  </bean>

  <bean id="cachingTask" class="org.renci.hearsay.canvas.CANVASCachingTask">
    <property name="callable" ref="cachingCallable" />
  </bean>

  <bean id="CANVASCachingService" class="org.renci.hearsay.canvas.CANVASCachingService" init-method="start" destroy-method="stop"
    activation="eager">
    <property name="delayBetweenRuns" value="${delayBetweenRuns}" />
    <property name="task" ref="cachingTask" />
    <cm:managed-properties persistent-id="org.renci.hearsay.canvas" update-strategy="container-managed" />
  </bean>

</blueprint>
